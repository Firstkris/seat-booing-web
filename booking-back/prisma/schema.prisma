// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  NOTTELL
}

enum ScheduleStatus {
  DEPARTED
  ARRIVED
  AVAILABLE
  FULL
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String    @map("first_name")
  lastName    String    @map("last_name")
  idNumber    String    @unique @map("id_number") @db.VarChar(16)
  email       String    @unique
  mobile      String    @unique
  password    String
  gender      Gender    @default(NOTTELL)
  birthDate   DateTime? @db.Date()
  address     String?
  createAt    DateTime  @default(now()) @map("create_at") @db.Timestamp(0)
  updateAt    DateTime  @updatedAt @map("update_at") @db.Timestamp(0)
  isMember    Boolean?  @default(true)
  paymentInfo String?
  booking     Booking[]

  @@map("users")
}

model Booking {
  id Int @id @default(autoincrement())

  createAt DateTime @default(now()) @map("create_at") @db.Timestamp(0)
  updateAt DateTime @updatedAt @map("update_at") @db.Timestamp(0)
  userId   Int      @map("user_id")
  user     User     @relation(fields: [userId], references: [id])

  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int      @map("shedule_id")

  bookingDetail BookingDetail[]

  @@map("booking")
}

model BookingDetail {
  id Int @id @default(autoincrement())

  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId Int     @map("booking_id")

  seat   Seat @relation(fields: [seatId], references: [id])
  seatId Int  @map("seat_id")

  @@map("booking_detail")
}

model Schedule {
  id            Int             @id @default(autoincrement())
  origin        String
  destination   String
  departTime    DateTime        @db.Time()
  arrivalTime   DateTime        @db.Time()
  departureDate DateTime        @db.Date
  price         Decimal         @db.Decimal(10, 0)
  seatAvailable Int             @map("seat_available")
  status        ScheduleStatus?

  busId   Int       @map("bus_id")
  bus     Bus       @relation(fields: [busId], references: [id])
  booking Booking[]

  @@map("schedule")
}

model Bus {
  id        Int        @id @default(autoincrement())
  status    Boolean
  totalSeat Int        @map("total_seat")
  schedule  Schedule[]
  seat      Seat[]

  @@map("bus")
}

model Seat {
  id       Int     @id @default(autoincrement())
  status   Boolean
  seatCode String  @map("seat_code") @db.VarChar(3)
  seatCol  String  @map("seat_col") @db.VarChar(2)
  seatRow  String  @map("seat_row") @db.VarChar(2)

  bus           Bus             @relation(fields: [busId], references: [id])
  busId         Int             @map("busId")
  BookingDetail BookingDetail[]

  @@map("seat")
}
